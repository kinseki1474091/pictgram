<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <%= form_for @comment do |c| %>
          <div class="form-group">
            <%= c.label :comment %>
            <%= c.text_area :comment, class: 'form-control' %>
          </div>

          <%= c.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>